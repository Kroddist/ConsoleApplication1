<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="storegg.MainPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="16">
        
            <Grid ColumnDefinitions="50,*,50" HeightRequest="50" Margin="0,5,0,10">
           
                <Frame Grid.Column="0" 
                       BackgroundColor="#F5F5F5"
                       CornerRadius="12"
                       HeightRequest="44"
                       WidthRequest="44"
                       HasShadow="False"
                       Padding="0">
                    <Label Text="⠿⠿⠀\n⠿⠿" 
                           FontSize="12"
                           TextColor="Black"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Frame>
                
                <Label Grid.Column="1"
                       Text="ZelOX"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="Black"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
                
                <Frame Grid.Column="2"
                       BackgroundColor="#F5F5F5"
                       CornerRadius="12"
                       HeightRequest="44"
                       WidthRequest="44"
                       HasShadow="False"
                       Padding="0">
                    <Label Text="🛍️" 
                           FontSize="18"
                           TextColor="Black"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Frame>
            </Grid>

            <Grid ColumnDefinitions="*,12,*" HeightRequest="120" Margin="0,5,0,10">
                <Frame Grid.Column="0"
                       BackgroundColor="#F4C430"
                       CornerRadius="20"
                       HasShadow="False"
                       Padding="12">
                    <StackLayout VerticalOptions="Center" Spacing="8">
                        <Label Text="TRENDING" 
                               TextColor="White" 
                               FontSize="14" 
                               FontAttributes="Bold"/>
                        <Label Text="PRODUCTS" 
                               TextColor="White" 
                               FontSize="14" 
                               FontAttributes="Bold"/>
                        <Label Text="→" 
                               TextColor="White" 
                               FontSize="20" 
                               HorizontalOptions="End"
                               VerticalOptions="End"/>
                    </StackLayout>
                </Frame>
                
                <Frame Grid.Column="2"
                       BackgroundColor="#E85A4F"
                       CornerRadius="20"
                       HasShadow="False"
                       Padding="12">
                    <StackLayout VerticalOptions="Center" Spacing="8">
                        <Label Text="SALE" 
                               TextColor="White" 
                               FontSize="14" 
                               FontAttributes="Bold"/>
                        <Label Text="PRODUCTS" 
                               TextColor="White" 
                               FontSize="14" 
                               FontAttributes="Bold"/>
                        <Label Text="→" 
                               TextColor="White" 
                               FontSize="20" 
                               HorizontalOptions="End"
                               VerticalOptions="End"/>
                    </StackLayout>
                </Frame>
            </Grid>

            <Label Text="POPULAR PRODUCTS"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="0,10,0,8"/>

            <Frame BackgroundColor="#F5F5F5"
                   CornerRadius="20"
                   HasShadow="False"
                   Padding="12"
                   Margin="0,0,0,8">
                <Grid RowDefinitions="140,Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                    
                    <Frame Grid.Row="0" Grid.ColumnSpan="2"
                           BackgroundColor="#F0F0F0"
                           CornerRadius="15"
                           HasShadow="False"
                           Padding="0">
                        <Image Source="avoine_jacket_main.png"
                               Aspect="AspectFill"
                               HeightRequest="120"
                               BackgroundColor="Transparent"/>
                    </Frame>
                    
                    <StackLayout Grid.Row="0" Grid.Column="1"
                                 Orientation="Horizontal"
                                 VerticalOptions="Start"
                                 HorizontalOptions="End"
                                 Margin="0,10,10,0">
                        <Frame BackgroundColor="White"
                               CornerRadius="15"
                               HasShadow="False"
                               Padding="8,4">
                            <StackLayout Orientation="Horizontal" Spacing="5">
                                <Label Text="⭐" FontSize="14"/>
                                <Label Text="4.7" FontSize="14" FontAttributes="Bold"/>
                            </StackLayout>
                        </Frame>
                    </StackLayout>
                    
                    <Label Grid.Row="1" Grid.ColumnSpan="2"
                           Text="Avoine Hooded"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black"
                           Margin="0,8,0,0"/>
                    
                    <Label Grid.Row="2" Grid.ColumnSpan="2"
                           Text="Quilted Jacket"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black"/>
                    
                    <Label Grid.Row="3" Grid.Column="0"
                           Text="$ 1500"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#E85A4F"
                           VerticalOptions="Center"
                           Margin="0,8,0,0"/>
                    
                    <Button Grid.Row="3" Grid.Column="1"
                            BackgroundColor="Black"
                            TextColor="White"
                            Text="🛒"
                            CornerRadius="12"
                            HeightRequest="40"
                            WidthRequest="40"
                            FontSize="16"
                            Margin="0,8,0,0"
                            Clicked="OnProductClicked"/>
                </Grid>
            </Frame>

            <Frame BackgroundColor="#F5F5F5"
                   CornerRadius="20"
                   HasShadow="False"
                   Padding="12"
                   Margin="0,0,0,20">
                <Grid RowDefinitions="140,Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                    
                    <Frame Grid.Row="0" Grid.ColumnSpan="2"
                           BackgroundColor="#F0F0F0"
                           CornerRadius="15"
                           HasShadow="False"
                           Padding="0">
                        <Image Source="metallic_jacket_main.png"
                               Aspect="AspectFill"
                               HeightRequest="120"
                               BackgroundColor="Transparent"/>
                    </Frame>
                    
                    <StackLayout Grid.Row="0" Grid.Column="1"
                                 Orientation="Horizontal"
                                 VerticalOptions="Start"
                                 HorizontalOptions="End"
                                 Margin="0,10,10,0">
                        <Frame BackgroundColor="White"
                               CornerRadius="15"
                               HasShadow="False"
                               Padding="8,4">
                            <StackLayout Orientation="Horizontal" Spacing="5">
                                <Label Text="⭐" FontSize="14"/>
                                <Label Text="4.7" FontSize="14" FontAttributes="Bold"/>
                            </StackLayout>
                        </Frame>
                    </StackLayout>
                    
                    <Label Grid.Row="1" Grid.ColumnSpan="2"
                           Text="Hooded Metallic"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black"
                           Margin="0,8,0,0"/>
                    
                    <Label Grid.Row="2" Grid.ColumnSpan="2"
                           Text="Shell Jacket"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black"/>
                    
                    <Label Grid.Row="3" Grid.Column="0"
                           Text="$1,050"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#F4C430"
                           VerticalOptions="Center"
                           Margin="0,8,0,0"/>
                    
                    <Button Grid.Row="3" Grid.Column="1"
                            BackgroundColor="Black"
                            TextColor="White"
                            Text="🛒"
                            CornerRadius="12"
                            HeightRequest="40"
                            WidthRequest="40"
                            FontSize="16"
                            Margin="0,8,0,0"
                            Clicked="OnProductClicked"/>
                </Grid>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
